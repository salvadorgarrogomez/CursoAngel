<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_helpdesk_ticket_tree" model="ir.ui.view">
        <field name="name">view_helpdesk_ticket_tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree string="Tickets">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="user_id"/>
                <field name="date" optional="show"/>
                <field name="limit_date" optional="hide"/>  
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">view_helpdesk_ticket_form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string="Tickets">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div>
                        <h1><field name="name"></field></h1>
                    </div>
                    <group name="main">
                        <group name="user">
                            <field name="user_id"/>
                            <field name="assigned"/>
                        </group>
                        <group name="dates">
                            <field name="date"/>
                            <field name="limit_date"/>  
                        </group>
                        <notebook>
                            <page string="Descripcion">
                                <group name="name">
                                    <field name="description"/> 
                                </group>
                            </page>
                            <page string="Acciones TODO">
                                <group name="name">
                                    <field name="actions_todo"/>
                                </group>
                            </page>
                            <page string="Etiquetas">
                                <group name="tags">
                                    <field name="tags_ids" nolabel="1"/>
                                </group>
                            </page>
                            <page string="Acciones DONE">
                                <button string="Review" name="review_actions" type="object" class="btn-primary"/>
                                <group>
                                    <field name="action_ids" nolabel="1"/>
                                </group>
                            </page>
                        </notebook>  
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id='helpdesk_ticket_action_all' model='ir.actions.act_window'>
        <field name='name'>Helpdesk Tickets</field>
        <field name='type'>ir.actions.act_window</field>
        <field name='res_model'>helpdesk.ticket</field>
        <field name='view_mode'>tree,form</field>
        <field name='context'>{}</field>
        <field name='help' type="html">
            <p class='una'>
                Crea un nuevo ticket
            </p>
        </field>
    </record>

    <menuitem id="helpdesk_menu" name="HelpDesk" sequence="10"/>
    <menuitem id="helpdesk_ticket_submenu" name="Tickets" sequence="10" parent="helpdesk_menu"/>
    <menuitem id="all_tickets" name="All Tickets" sequence="10" parent="helpdesk_ticket_submenu" action="helpdesk_ticket_action_all"/>

</odoo>
