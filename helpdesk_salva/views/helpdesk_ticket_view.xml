<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="helpdesk_ticket_action_all" model="ir.actions.act_window">
        <field name='name'>Helpdesk Tickets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_model">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
        <field name="target">new</field>
            <p class="una">
                Crea un nuevo ticket
            </p>
        </field>
    </record>

    <menuitem id="helpdesk_menu" name="HelpDesk" sequence="10"/>
    <menuitem id="helpdesk_ticket_submenu" name="Tickets" sequence="10" parent="helpdesk_menu"/>
    <menuitem id="all_tickets" name="All Tickets" sequence="10" parent="helpdesk_ticket_submenu" action="helpdesk_ticket_action_all"/>

</odoo>
