<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_living_place_tree" model="ir.ui.view">
        <field name="name">view_living_place_tree</field>
        <field name="model">living.place</field>
        <field name="arch" type="xml">
            <tree string="Livings">
                <field name="name" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" />
            </tree>
        </field>
    </record>
 
    <record id="view_living_place_form" model="ir.ui.view">
        <field name="name">view_living_place_form</field>
        <field name="model">living.place</field>
        <field name="arch" type="xml">
            <form string="Livings">
                <button string="Sold" name="value_sold"
                    type="object"
                    context="{}"/>  
                <button string="Cancel" name="value_canceled"
                    type="object"
                    context="{}"/>  
                <sheet>
                    <div>
                        <h1>
                            <field name="name" />
                        </h1>
                        <field name="tags_id" widget="many2many_tags"/>
                    </div>
                    <group name="main">
                        <group name="datos">
                            <field name="state" />
                            <field name="property_type" />
                            <field name="postcode" />
                            <field name="date_availability" />                           
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="best_price" />
                            <field name="selling_price" />
                        </group>
                        <notebook>
                            <page name="description" string="Description">
                                <group>
                                    <field name="description" />
                                    <field name="bedrooms" />
                                    <field name="living_area" />
                                    <field name="facades" />
                                    <field name="garage" />
                                    <field name="garden" />
                                    <field name="garden_area" />
                                    <field name="garden_orientation" />
                                    <field name="total_area" />
                                </group>
                            </page>
                            <page string="Offers">
                                <group>
                                    <field name="offer_ids" context="{'default_user_id': user_id}">
                                        <tree>
                                            <field name="price" />
                                            <field name="partner_id" />
                                            <field name="validity" />
                                            <field name="date_deadline" />
                                            <button name="action_confirm"
                                                type="object"
                                                context="{}"
                                                icon="fa-check"
                                                string=" "/>
                                            <button name="action_refused"
                                                type="object"
                                                context="{}"
                                                icon="fa-times"
                                                string=" "/>
                                            <field name="status" />
                                        </tree>
                                        <form>
                                            <group name="main">
                                                <field name="price" />
                                                <field name="partner_id" />
                                                <field name="validity" />
                                                <field name="date_deadline" />
                                                <button name="action_confirm"
                                                    type="object"
                                                    context="{}"
                                                    icon="fa-check"
                                                    string=" "
                                                    invisible="True"/>
                                                <button name="action_refused"
                                                    type="object"
                                                    context="{}"
                                                    icon="fa-times"
                                                    string=" "
                                                    invisible="True"/>
                                                <field name="status" />
                                            </group>
                                        </form>
                                    </field>
                                </group>
                            </page>                            
                            <page name="other_info" string="Other Info">
                                <group>
                                    <field name="user_id" />
                                    <field name="partner_id" />
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_living_place_search" model="ir.ui.view">
        <field name="name">view_living_place_search</field>
        <field name="model">living.place</field>
        <field name="arch" type="xml">
            <search string="Livings">
                <field name="name" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="facades" />
                <filter name="available" string="Available" domain="[('state', '=', 'new')],[('state', '=', 'offer received')]" />
                <group name="group_by" string="Postcode">
                    <filter name="filter_postcode" string="Postcode" context="{'group_by': 'postcode'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="living_place_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">living.place</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>Add living places</p>
        </field>
    </record>

    <menuitem id="adverti_menu" name="Properties" sequence="10" parent="adverti_menu_submenu"
        action="living_place_action" />

</odoo>
